{
    "name": "aist/ipstack-adapter",
    "description": "Geolocation Ipstack Adapter",
    "type": "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Mateusz Sitek",
            "email": "webdeveloper@mateuszsitek.com",
            "homepage": "http://mateuszsitek.com",
            "role": "Author"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^5.6 || ^7.0",
        "aist/geolocation": "^0.1.0",
        "zendframework/zend-servicemanager": ">=2.6"
    },
    "require-dev": {
        "malukenho/docheader": "^0.1.5",
        "mmoreram/php-formatter": "^1.3",
        "phpunit/php-code-coverage": "^5.2",
        "phpunit/phpunit": "^6.0.7 || ^5.7.14",
        "php-coveralls/php-coveralls": "^1.0",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/var-dumper": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Aist\\Ipstack\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Aist\\Ipstack\\": "test/"
        }
    },
    "extra": {
        "zf": {
            "component": "Aist\\Ipstack",
            "config-provider": "Aist\\Ipstack\\ConfigProvider",
            "module": "Aist\\Ipstack"
        }
    },
    "scripts": {
        "post-update-cmd": [
        ],
        "fix": [
            "@header-fix",
            "@use-sort",
            "@cs-fix"
        ],
        "header-fix": [
            "php-formatter formatter:header:fix config",
            "php-formatter formatter:header:fix src",
            "php-formatter formatter:header:fix test"
        ],
        "header-check": [
            "docheader check config",
            "docheader check src",
            "docheader check test"
        ],
        "use-sort": [
            "php-formatter formatter:use:sort config",
            "php-formatter formatter:use:sort src",
            "php-formatter formatter:use:sort test"
        ],
        "check": [
            "@header-check",
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-clover clover.xml",
        "upload-coverage": "coveralls -v"
    }
}
